<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.works.mapper.UserMapper">
    <!-- 注册用户 -->
    <insert id="addUserRegister" parameterType="User">
          INSERT  INTO w_user (id,user_email,password,role) VALUES (#{id},#{user_email},#{password},#{role})
    </insert>

    <!-- 查询用户名密码是否正确 -->
    <select id="findUserLogin" parameterType="Map" resultType="User">
        SELECT * FROM w_user WHERE user_email = #{user_email} AND password = #{password}
    </select>

    <!-- 判断这个用户是否已经注册 -->
    <select id="findUser2email" parameterType="String" resultType="User">
        SELECT * FROM w_user WHERE user_email = #{user_email}
    </select>
</mapper>